@model ProfileFormViewModel
@{
    ViewData["title"] = "Edit profile";
}
<h1>@ViewData["Title"]</h1>


<form id="registerForm" asp-action="Edit" method="post">
    <h2>Edit Profile</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input type="hidden" asp-for="Id" />
     
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" autocomplete="First-name" aria-required="true" placeholder="password" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" autocomplete="Last-name" aria-required="true" placeholder="password" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="UserName" class="form-control" autocomplete="Last-name" aria-required="true" placeholder="password" />
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary d-block mt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}